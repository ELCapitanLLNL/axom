#!/bin/sh -f
# This scripts exists to set PYTHONPATH before calling the setuptools
# created shroud-script
#
# DIR - directory where script is installed.
#  other files are relative to this script
#    bin/shroud
#    bin/shroud-script
#    lib/pythonX.Y/site-packages

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export PYTHONPATH=$DIR/../@BLT_Python_SITE_PACKAGES@
@PYTHON_EXECUTABLE@ $DIR//../@BLT_Python_SITE_PACKAGES@/shroud/main.py "$@"
