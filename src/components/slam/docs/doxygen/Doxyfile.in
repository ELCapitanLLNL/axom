PROJECT_NAME  = SLAM
PROJECT_BRIEF = "SLAM: Set-theoretic Lightweight API for Meshes. Reusable components for defining distributed meshes on simulation codes."
INPUT = @PROJECT_SOURCE_DIR@/src @PROJECT_SOURCE_DIR@/src/policies @PROJECT_SOURCE_DIR@/examples @PROJECT_SOURCE_DIR@/examples/lulesh2.0.3 @PROJECT_SOURCE_DIR@/examples/tinyHydro @PROJECT_SOURCE_DIR@/README.md
GENERATE_XML = YES
USE_MATHJAX = YES
FILE_PATTERNS += *.md *.markdown *.cpp *.hpp
TAB_SIZE               = 2
INLINE_INHERITED_MEMB  = YES
BUILTIN_STL_SUPPORT    = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
#TYPEDEF_HIDES_STRUCT   = NO
GENERATE_TREEVIEW      = YES
GENERATE_LATEX         = NO
GENERATE_XML           = NO
HAVE_DOT               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
INTERACTIVE_SVG        = YES

EXCLUDE_PATTERNS = *lulesh*tuple*